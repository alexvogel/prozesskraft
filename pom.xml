<!-- 			</plugin> -->

<!-- packt alle class-Files in ein jar legt es im classDirectory ab-->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<id>installation-caegroup-jar</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<archive>
								<manifest>
									<mainClass>de.caegroup.pradar.parts.PradarUi</mainClass>
									<addClasspath>true</addClasspath>
								</manifest>
							</archive>
<!-- ${project.build.outputDirectory} = ./target/classes -->
<!-- 							<classesDirectory>/target</classesDirectory> -->
<!-- 							<classesDirectory>/src/de/caegroup/pradar/parts</classesDirectory> -->
<!-- 							<outputDirectory>/tmp/pradar/bin-klar</outputDirectory> -->
<!-- 							<outputDirectory>${project.build.outputDirectory}</outputDirectory> -->
							<includes>
								<include>*</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.pyx4me</groupId>
				<artifactId>proguard-maven-plugin</artifactId>
				<version>2.0.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>proguard</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<obfuscate>true</obfuscate>
<!-- 					<outputDirectory>/tmp/pradar</outputDirectory> -->
					<outputDirectory>${project.build.directory}</outputDirectory>
<!-- 					<injar>bin-klar/${project.build.finalName}.jar</injar> -->
					<injar>${project.build.finalName}.jar</injar>
					<outjar>obfuscated_jar/${project.build.finalName}.jar</outjar>
					<options>
						<option>-keep public class de.caegroup.pradar.parts.PradarView { *; }</option>
						<option>-keep public class de.caegroup.pradar.parts.PradarViewModel { *; }</option>
					</options>
					<libs>
						<lib>${java.home}/lib/rt.jar</lib>
					</libs>
					<proguardVersion>4.8</proguardVersion>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
<!-- 					<outputDirectory>/tmp/pradar/bin</outputDirectory> -->
					<finalName>${project.name}-${project.version}</finalName>
					<archive>
						<manifest>
							<mainClass>de.caegroup.pradar.parts.PradarView</mainClass>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
