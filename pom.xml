	<build>

<!-- setzen des outputDirectories fuer die *.class-Files (die von maven-compiler-plugin erzeugt werden) -->
<!-- 		<outputDirectory>target/classes</outputDirectory> -->

		<plugins>

<!-- compiliert alle *.java files zu *.class files-->
<!-- 			<plugin> -->
<!-- 				<artifactId>maven-compiler-plugin</artifactId> -->
<!-- 				<version>3.0</version> -->
<!-- 				<configuration> -->
