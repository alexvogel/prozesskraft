<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.caegroup.pradar</groupId>
	<artifactId>pradar-cleandb</artifactId>
	<packaging>jar</packaging>
	<version>0.1</version>
	<name>pradar-cleandb</name>
	<url>http://maven.apache.org</url>
	<build>
		<plugins>

<!-- packt alle class-Files in ein jar legt es im target ab-->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<id>installation-caegroup-jar</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<archive>
								<manifest>
									<mainClass>de.caegroup.pradar.Init</mainClass>
<!-- 									<addClasspath>true</addClasspath> -->
								</manifest>
								<manifestEntries>
									<Class-Path>pradar-core-0.1-jar-with-dependencies.jar</Class-Path>
								</manifestEntries>
							</archive>
<!-- 							<outputDirectory>/tmp/pradar/bin-klar</outputDirectory> -->
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.pyx4me</groupId>
				<artifactId>proguard-maven-plugin</artifactId>
				<version>2.0.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>proguard</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<obfuscate>true</obfuscate>
<!-- 					<outputDirectory>/tmp/pradar</outputDirectory> -->
<!-- 					<injar>bin-klar/${project.build.finalName}.jar</injar> -->
<!-- 					<outjar>bin/${project.build.finalName}.jar</outjar> -->
					<options>
						<option>-keep public class de.caegroup.pradar.Cleandb { *; }</option>
					</options>
					<libs>
						<lib>${java.home}/lib/rt.jar</lib>
					</libs>
					<proguardVersion>4.8</proguardVersion>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
<!-- 					<outputDirectory>/tmp/pradar/bin</outputDirectory> -->
					<finalName>${project.name}-${project.version}</finalName>
					<archive>
						<manifest>
							<mainClass>de.caegroup.pradar.Cleandb</mainClass>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.ini4j</groupId>
			<artifactId>ini4j</artifactId>
			<version>0.5.2</version>
		</dependency>
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>de.caegroup.pradar</groupId>
			<artifactId>pradar-core</artifactId>
			<version>0.1.4</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
